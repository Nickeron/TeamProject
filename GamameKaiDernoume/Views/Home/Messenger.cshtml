@model MessengerViewModel
@{
	ViewData["Title"] = "Messenger";
}
<ul class="list-group">
	@foreach (User friend in Model.ThisUsersFriends)
	{
		<li class="list-group-item list-group-item-action">
			@friend.UserAvatar @friend.UserName
		</li>
	}
</ul>

<div class="container">
	<div class="row">&nbsp;</div>
	<div class="row">
		<div class="col-6">&nbsp;</div>
		<div class="col-6">
			<small type="text" value="@Model.UserName" id="userName">@Model.UserName</small>
			<br />
			Message <input type="text" id="messageInput" />
			<input type="button" id="sendButton" value="Send" />
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<hr />
		</div>
	</div>
	<div class="row">
		<div class="col-6">&nbsp;</div>
		<div class="col-6">
			<ul id="messagesList"></ul>
		</div>
	</div>
</div>
<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/chat.js"></script>
@*
	If you need a version of the chat script that is compatible with IE 11, replace the above <script> tag that imports chat.js with this one
	<script src="~/js/es5-chat.js"></script>
*@
