<div class="modal fade" id="uploadImage" tabindex="-1" role="dialog" aria-labelledby="uploadForm" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="uploadForm">Upload an image</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form asp-controller="Upload" asp-action="UserAvatar" method="post" enctype="multipart/form-data">
				<div class="modal-body">
					<div class="form-group">
						<label for="instructions" class="col-form-label">Images can be of type PNG or JPG</label>
						<input id="image" type="file" class="form-control" name="image">
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Upload</button>
				</div>
			</form>
		</div>
	</div>
</div>
